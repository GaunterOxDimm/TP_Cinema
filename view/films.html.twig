<!--************************************** CAROUSEL *******************************-->


<div class="container-fluid d-flex col-12">
        <div class="container col-8">
                <div id="carouselExampleCaptions" class="container col-5 carousel slide" data-bs-ride="false">
                        <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner container col-3" id="carou">
                  
                                <div class="carousel-item active">
                                
                                        <img src="view/web/img/Buzz.jpeg" class="d-block w-100" alt="...">
                                      
                       
                                </div>
                                <div class="carousel-item">
                                
                                        <img src="view/web/img/Thor.jpeg" class="d-block w-100" alt="...">
                                        
                       
                                </div>
                                <div class="carousel-item">
                                
                                   
                                        <img src="view/web/img/island.jpeg" class="d-block w-100" alt="...">
                       
                                </div>
                        </div>     
                </div>
                 <br>
                <form action="films" method="post">
                        <div class="container col-10">
                                <div class="container d-flex justify-content-center">
                                        <input type="text" value="{{film.idFilm}}" name="idFilm" >
                                        <button class="btn btn-primary col-3 d-none d-md-block m-1" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev" name="previous">
                                                <span class="sliders">Précedent</span>
                                        </button>
                                        <button class="btn btn-primary col-3 d-none d-md-block m-1" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next" name="nexter">
                                                <span class="sliders">Suivant</span>
                                        </button>
                                </div>
                        </div>
                        <div class="container d-flex justify-content-center">
                                <button class="btn btn-primary d-md-none mt-1 m-3" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev" name="previous">
                                        <span class="sliders"><</span>
                                </button>
                                <button class="btn btn-primary d-md-none mt-1 m-3" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next" name="nexter">
                                        <span class="sliders">></span>
                                </button>
                        </div>
                </form>
        </div>
        <div class="container col-4">Jointure SQL Description
                <div>
                        {{film.get_titre}}( {{film.get_annee}} )
                        <br><br>
                        Acteurs : C'EST ICI JOINTURE POUR POUVOIR AFFICHER LES ACTEURS
                        <br><br>
                        Le réalisateur : {{film.get_realisateur}}
                        <br><br>
                        <input value={{film.get_idFilm}} name="id" type='hidden'>
                </div>
        </div>
</div>
