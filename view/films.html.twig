{# <!--************************************** CAROUSEL *******************************--> #}


        
   
<div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">

        <div class="carousel-indicators">
        {% for film in allfilms %}
                <button type="button" data-bs-target="#carouselExampleDark" data-slide-to="{{ loop.index }}" {% if loop.index == 1 %} class="active" {% endif %} aria-current="true" aria-label="Slide 1"></button>
        {% endfor %}
        </div>
        
        <div class="carousel-inner"> 
        {% for film in allfilms %}    
                 <div {% if loop.index == 1 %} class="carousel-item active" {% else %} class="carousel-item" {% endif %}> 
                         <img src="{{film.get_affiche}}" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                                <h5>"{{film.get_titre}}"</h5>
                                <p>Some representative placeholder content for the first slide.</p>
                        </div>
                </div>
        {% endfor %} 
        </div>
        
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
        </button>
</div>



