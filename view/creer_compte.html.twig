<div class="container-fluid">
        <div class="alert alert-secondary" role="alert">
                <h2>Créez votre compte</h2>
                <br>
                <form class="row col-4 g-3 d-flex flex-column mb-3 justify-content-center" action="creer_compte" method="post">
                        <div class="col-auto">
                                <label for="Nom d'utilisateur" class="ms-1">Nom d'utilisateur</label>
                                <input type="text" class="form-control" id="utilisateur" placeholder="Nom d'utilisateur" name="user">
                        </div>
                        <div class="col-auto">
                                <label for="email" class="ms-1">Adresse mail</label>
                                <input type="text" class="form-control" id="sign-up-mail" placeholder="Email adresse" name="login">
                                {% if emailErr == "Format invalide" %} {{emailErr}} {% endif %}
                                
                        </div>
                        <br>
                        <div class="col-auto">
                                <label for="password" class="ms-1">Mot de passe</label>
                                <input type="password" class="form-control" id="account-password" placeholder="password" name="password1">
                                {{passErr}}
                        </div>
                        <br>
                        <div class="col-auto">
                                <label for="rewrite password" class="ms-1">Saisir à nouveau votre mot de passe</label>
                                <input type="password" class="form-control" id="rewrite" placeholder="rewrite password" name="password2">
                                {% if passErr == "Les mots de passe ne correspondent pas" %} {{passErr}} {% endif %}
                                
                        </div>
                        <br>
                        <div class="col-auto d-flex justify-content-center">
                                <button type="submit" class="btn btn-secondary mb-3" name="submit">Valider</button>
                        </div>
                </form>
        </div>
</div> 